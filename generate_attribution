function render ($id, $entity){
	
	if (isset($entity ['logo'] ){
		$anchor = "<img src = ".$entity['logo']."/>";
		
	}else if(isset($entity ['name'])) {
		$anchor = $entity['name'];
	}else{
		$anchor = $id;
		}
		
	if(isset($entity ['url'] )){
		$anchor = '<a href="'.$entity ['url'].'" target="_blank">'.$anchor.'</a>, ';
		}	
		
	return $anchor;
	
}


?>
<ul>
<? foreach ($attribution as $arr){
	$ps = ""; 
	foreach ($arr["persons"] as $o)  {
		$ps .= render($o, $persons[$o]).", ";
	}
	$orgs = ""; 
	foreach ($arr["orga"] as $o)  {
		$orgs .= render($o, $organisations[$o]).", ";
	}
	$ts = ""; 
	foreach ($arr["tools"] as $o)  {
		$ts .= render($o, $tools[$o]).", ";
	}
	
		
	?>
<li><?=$ps ?><?=$orgs ?><?=$ts ?></li>
<?}?>
</ul>

